{
    "extends": [
        "tslint:recommended",
        "angular-tslint-rules"
    ],
    "rulesDirectory": [
        "codelyzer"
    ],
    "linterOptions": {
        "exclude": []
    },
    "rules": {
        "template-i18n": [true, "check-id"],
        "array-type": false,
        "arrow-parens": true,
        "deprecation": {
            "severity": "warn"
        },
        "import-blacklist": [
            true,
            "rxjs/Rx"
        ],
        "interface-name": false,
        "max-classes-per-file": false,
        "max-line-length": [
            true,
            280
        ],
        "member-ordering": [
          true,
          {
            "order": [
              "public-static-field",
              "public-instance-field",
              "private-static-field",
              "private-instance-field",
              "public-constructor",
              "private-constructor",
              "public-instance-method",
              "protected-instance-method",
              "private-instance-method"
            ]
          }
        ],
        "no-consecutive-blank-lines": false,
        "no-console": [
            true,
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace"
        ],
        "no-empty": false,
        "no-inferrable-types": [
            true,
            "ignore-params"
        ],
        "no-non-null-assertion": true,
        "no-redundant-jsdoc": true,
        "no-switch-case-fall-through": true,
        "no-use-before-declare": true,
        "no-var-requires": false,
        "object-literal-key-quotes": [
            true,
            "as-needed"
        ],
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "quotemark": [
            true,
            "single"
        ],
        "no-output-on-prefix": true,
        "use-input-property-decorator": true,
        "use-output-property-decorator": true,
        "use-host-property-decorator": true,
        "no-input-rename": true,
        "no-output-rename": true,
        "use-life-cycle-interface": true,
        "use-pipe-transform-interface": true,
        "component-class-suffix": true,
        "directive-class-suffix": true,
        "prefer-method-signature": true,
        "promise-function-async": true,
        "arrow-return-shorthand": true,
        "await-promise": true,
        "curly": true,
        "eofline": true,
        "import-spacing": true,
        "jsdoc-format": true,
        "newline-before-return": true,
        "no-any": false,
        "no-construct": true,
        "no-duplicate-imports": true,
        "no-for-in-array": true,
        "no-parameter-reassignment": true,
        "no-return-await": true,
        "no-shadowed-variable": true,
        "no-require-imports": true,
        "no-this-assignment": true,
        "no-var-keyword": true,
        "only-arrow-functions": true,
        "prefer-const": true,
        "prefer-object-spread": true,
        "semicolon": true,
        "triple-equals": true,
        "no-void-expression": false,
        "return-undefined": false,
        "switch-default": false,
        "no-object-literal-type-assertion": false,
        "typedef": [
            true,
            "call-signature",
            "property-declaration"
        ],
        "no-angle-bracket-type-assertion": true,
        "no-null-keyword": false,
        "no-string-literal": false,
        "increment-decrement": false,
        "binary-expression-operand-order": false,
        "no-bitwise": false,
        "no-conditional-assignment": false,
        "prefer-conditional-expression": true,
        "strict-boolean-expressions": false,
        "indent": [true, "spaces", 2],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock"
        ],
        "variable-name": false,
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }, {
                "call-signature": "onespace",
                "index-signature": "onespace",
                "parameter": "onespace",
                "property-declaration": "onespace",
                "variable-declaration": "onespace"
            }
        ],
        "space-before-function-paren": [
            true,
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always",
                "method": "never",
                "constructor": "never"
            }
        ],
        "space-within-parens": [
            false,
            "always"
        ],
        "no-trailing-whitespace": true,
        "newline-per-chained-call": true,
        "one-line": [
            false
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never",
                "esSpecCompliant": true
            }
        ],
        "comment-type": false,
        "ban-ts-ignore": true,
        "radix": true,
        "contextual-life-cycle": false,
        "no-template-call-expression": false,
        "template-conditional-complexity": false,
        "trackBy-function": false,
        "import-destructuring-spacing": false,
        "cyclomatic-complexity": [true, 40],
        "prefer-inline-decorator": [
            true,
            {
                "getters": false,
                "setters": false,
                "methods": false,
                "parameter-properties": true,
                "parameters": true,
                "properties": true
            }
        ],
        "no-implicit-dependencies": false,
        "prefer-readonly": false,
        "i18n": false,
        "template-cyclomatic-complexity": false,
        "prefer-function-over-method": false
    }
}
